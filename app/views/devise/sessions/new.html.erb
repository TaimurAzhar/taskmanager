

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
	<h2 class = "text-center">Log in</h2>
    <div class= "input-group">
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span><%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" , input_html: {class: 'form-control'} %>
	</div>
	<br>
	<div class ="input-group">
    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span><%= f.input :password, required: false , label: false, label: false , placeholder: "Password", input_html: {class: 'form-control'} %><br>
  	</div>
  	<br>

  
    <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
  
<% end %>

<%= render "devise/shared/links" %>
