<%= simple_form_for(@task,html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <div >
    <%= f.input :content, label: false, required: false, autofocus: true, input_html: {class: "form-control", placeholder: "Content"} %>
    
  </div>

  <div >
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
